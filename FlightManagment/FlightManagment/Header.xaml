<UserControl x:Class="FlightManagement.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewConstants="clr-namespace:FlightManagement.ViewConstants"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Background="{Binding Source={x:Static viewConstants:ColorStatic.MainColor}, Mode=OneWay}" VerticalAlignment="Stretch">
        <Rectangle Height="10" Width="20" ></Rectangle>
        <Label VerticalAlignment="Center" Content="{Binding Source={x:Static viewConstants:StringStatic.Title}, Mode=OneWay}"/>
    </StackPanel>
</UserControl>
